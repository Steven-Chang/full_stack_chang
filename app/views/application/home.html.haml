      %ul.nav.nav-pills.mb-3{ role: "tablist" }
        %li.nav-item{ role: "presentation" }
          %button.nav-link.active{ "aria-controls" => "pills-portfolio", "aria-selected" => "true", "data-bs-target" => "#pills-portfolio", "data-bs-toggle" => "pill", role: "tab", type: "button" } Portfolio
        %li.nav-item{ role: "presentation" }
          %button.nav-link{ "aria-controls" => "pills-tools", "aria-selected" => "false", "data-bs-target" => "#pills-tools", "data-bs-toggle" => "pill", role: "tab", type: "button" } Tools
