        %li.nav-item{ role: "presentation" }
          %button.nav-link{ "aria-controls" => "pills-references", "aria-selected" => "false", "data-bs-target" => "#pills-references", "data-bs-toggle" => "pill", role: "tab", type: "button" } References
      .tab-content
        .tab-pane.fade.show.active#pills-portfolio{ "aria-labelledby" => "pills-portfolio", role: "tabpanel" }
          .card
            .card-body
              %ul.timeline.timeline-single
                - Project.where(private: false).order(start_date: :desc).each do |project|
                  %li.timeline-item
                    .timeline-dot
                    .timeline-content
                      - if project.logo.present?
                        = image_tag project.logo.url, class: 'float-right', style: 'max-width: 120px;'
                      %span.block.mb-5
                        %h5
                          - if project.url.present?
                            = link_to project.title, project.url, target: '_blank', rel: 'noopener'
                          - else
                            = project.title
                      %span.block.font-size-15.mb-5 #{project.start_date.strftime('%d %b %y')} - #{project.end_date&.strftime('%d %b %y') || 'NOW'} (#{distance_of_time_in_words(project.start_date, project.end_date || Time.current)})
                      - if project.role.present?
                        %span.block.mb-5= project.role
                      /
                        <haml_silent> if project.description.present? </haml_silent><haml_block>
                        <div style='white-space: pre-line;'>
                        <haml_loud> project.description </haml_loud>
                        </div>
                        </haml_block>
        .tab-pane.fade#pills-tools{ "aria-labelledby" => "pills-tools-tab", role: "tabpanel" }
          .card
            - Tool::CATEGORY_LABEL_MAPPING.each do |key, value|
              - visible_tools = Tool.where(category: key, visible: true)
              .card-body
                %h5.card-title
                  %span #{value} (#{visible_tools.count})
                - visible_tools.order(:name).each do |tool|
                  - if tool.logo.present?
                    .mb-2.mr-2.text-center.d-inline-block.bg-light.align-top{:style => "border: 1px solid white; border-radius: 6px; height: 135px; width: 120px;"}
                      %div{:style => "padding: 10px 25px 0 25px;"}
                        .d-inline-block.bg-white.text-center.p-1{:style => "height: 70px; width: 70px; border-radius: 4px;"}
                          = image_tag tool.logo.variant(:thumb).processed
                      .p-1{:style => "line-height: 22px; font-size: 13px; font-weight: 600; color: rgb(51, 51, 51)"}= tool.name
