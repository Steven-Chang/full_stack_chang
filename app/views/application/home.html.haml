            %i.bi.bi-envelope.mr-10
            %span.text-break
              = mail_to 'stevenchang5000@protonmail.com'
          %p.mb-10.text-nowrap{"data-info-type" => "github"}
            %i.bi.bi-github.mr-10
            %span.text-break
              = link_to 'Github', 'https://github.com/Steven-Chang'
          %p.mb-10.text-nowrap{"data-info-type" => "address"}
            %i.bi.bi-geo-alt.mr-10
            %span.text-break
